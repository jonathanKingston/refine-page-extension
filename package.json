{
  "name": "refine-page",
  "version": "1.1.0",
  "description": "Create labeled AI datasets from web pages. Capture high-fidelity snapshots, annotate text, and build Q&A pairs for ML training.",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/build.mjs --watch",
    "build": "node scripts/build.mjs",
    "build:dev": "node scripts/build.mjs --dev",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "capture:pages": "node scripts/screenshots/capture-pages.mjs",
    "screenshots": "node scripts/screenshots/capture.mjs --extension-path=./dist",
    "screenshots:all": "node scripts/screenshots/capture.mjs --extension-path=./dist --scenario=all",
    "screenshots:store": "node scripts/screenshots/capture.mjs --extension-path=./dist --scenario=chrome-store-screenshot-1-list,chrome-store-screenshot-2-annotations,chrome-store-marquee-tile,chrome-store-small-tile",
    "screenshots:homepage": "node scripts/screenshots/capture.mjs --extension-path=./dist --scenario=homepage-hero-light,homepage-hero-dark",
    "screenshots:features": "node scripts/screenshots/capture.mjs --extension-path=./dist --scenario=feature-text-highlighting,feature-evaluation-panel,feature-auto-detect"
  },
  "dependencies": {
    "@annotorious/annotorious": "^3.0.17",
    "@recogito/text-annotator": "^3.4.9",
    "colord": "^2.9.3",
    "debounce": "^3.0.0",
    "hotkeys-js": "^4.0.0",
    "jszip": "^3.10.1",
    "mhtml2html": "file:./vendor/mhtml2html",
    "poll": "^3.2.2",
    "webmarker-js": "^0.7.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.2.0",
    "puppeteer": "^22.0.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
